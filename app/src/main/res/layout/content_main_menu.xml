<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainMenuActivity"
    tools:showIn="@layout/app_bar_main_menu">

    <TextView
        android:id="@+id/home_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="@string/home_title"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/home_title"
        android:gravity="center"
        android:fontFamily="@font/orator"/>

    <Button
        android:id="@+id/btn_custom_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/home_text"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_button_layout"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        android:visibility="visible"
        android:text="Create Custom Menu"
        android:fontFamily="@font/orator"/>

    <Button
        android:id="@+id/btn_breakfast"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btn_custom_menu"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_button_layout"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        android:visibility="visible"
        android:text="Breakfast"
        android:fontFamily="@font/orator"/>

    <Button
        android:id="@+id/btn_lunch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btn_breakfast"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_button_layout"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        android:visibility="visible"
        android:text="Lunch"
        android:fontFamily="@font/orator"/>

    <Button
        android:id="@+id/btn_dinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btn_lunch"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_button_layout"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        android:visibility="visible"
        android:text="Dinner"
        android:fontFamily="@font/orator"/>

    <Button
        android:id="@+id/btn_snacks"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btn_dinner"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_button_layout"
        android:textColor="@android:color/white"
        android:alpha="0.7"
        android:visibility="visible"
        android:text="Snacks"
        android:fontFamily="@font/orator"/>

</RelativeLayout>